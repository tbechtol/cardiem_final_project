<div class="page-header">
  <h1>
    Service Requests
      </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Car</th>
        <th>Pickup Address</th>
        <th>Pickup Date</th>
        <th>Pickup Time</th>
        <th>Service Center Name</th>
        <th>Service Center Address</th>
        <th>Service Center Phone Number</th>
        <th>Driver</th>
        <th>Actions</th>
      </tr>

      <% @service_requests.each do |service_request| %>
      <tr>
        <td>
          <% if service_request.car.present? %>
            <a href="/cars/<%= service_request.car.id %>">
              <%= service_request.car.user_id %>
            </a>
          <% end %>
        </td>
        <td><%= service_request.pickup_location %></td>
        <td><%= service_request.pickup_date %></td>
        <td><%= service_request.pickup_time %></td>
        <td><%= service_request.rc_name %></td>
        <td><%= service_request.repair_center_location %></td>
        <td><%= service_request.rc_phone %></td>
        <td>
          <% if service_request.driver.present? %>
            <a href="/drivers/<%= service_request.driver.id %>">
              <%= service_request.driver.email %>
            </a>
          <% else %>
          Not assigned yet
          <% end %>
        </td>


        <td>
          <a href="/service_requests/<%= service_request.id %>" class="btn btn-primary btn-xs">Show</a>
          <a href="/service_requests/<%= service_request.id %>/edit" class="btn btn-warning btn-xs">Edit</a>
          <a href="/delete_service_request/<%= service_request.id %>" class="btn btn-danger btn-xs" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <div><a href="/service_requests/new" class="btn btn-med btn-success">New Service Request</a></div>
    <%= paginate @service_requests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
