<div class="page-header">
  <h3>Driver #<%= @driver.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @driver.email %></dd>

      <dt>Password</dt>
      <dd><%= @driver.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/drivers" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Driver has many service_requests -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Service_requests
      </li>

      <% @driver.service_requests.each do |service_request| %>
        <li class="list-group-item">
          <a href="/service_requests/<%= service_request.id %>">
            <%= service_request.car_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/service_requests/<%= service_request.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/service_requests/<%= service_request.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_service_request/<%= service_request.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
