<div class="page-header">
  <h1>
    Drivers
    <a href="/drivers/new" class="btn btn-lg btn-success">New Driver</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.email %></td>
        <td><%= driver.password %></td>
        <td>
          <a href="/drivers/<%= driver.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @drivers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
